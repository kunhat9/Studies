<body class="navbar-top">
@{Html.RenderAction("_HomeHeader", "Home"); }
<div class="page-container">
    <div class="page-content">
        <div class="sidebar sidebar-main">
            @{Html.RenderAction("_HomeMenuLeft", "Home"); }
        </div>
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </div>
</div>
@{Html.RenderAction("_HomeFooter", "Home"); }
    
@*@Scripts.Render("~/bundles/ScriptDefault") *@
@*<script type="text/javascript" src="~/Assets/js/pages/extra_trees.js"></script>*@
@{
    var script = "";

    if (IsSectionDefined("Scripts"))
    {
        script = RenderSection("Scripts", required: false).ToHtmlString();

        Regex rRemScript = new Regex(@"<script[^>]*>");

        script = rRemScript.Replace(script, "");

        rRemScript = new Regex(@"<\/script>");

        script = rRemScript.Replace(script, "");
    }

    <script type="text/javascript">
            @if(!string.IsNullOrEmpty(script))
            {
                @MvcHtmlString.Create(script)
            }
        </script>
}
@RenderSection("ScriptsFunction", required: false)
</body>
</html>


<!-- bootstrap JS -->		
<script src="~/Assets/js/bootstrap.min.js"></script>

