    <script src="~/Assets/js/vendor/jquery-1.12.4.min.js"></script>

    <script src="~/Assets/js/toastr.min.js"></script>
    <script src="~/Assets/js/http.js"></script>


    <!-- /theme JS files -->
    @*@Styles.Render("~/Content/CssDefault")*@
