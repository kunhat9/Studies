@{
    ViewBag.Title = "Class";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

@model List<CORE.Tables.TB_SCHEDULES>

<!-- Page Banner Area Start -->
<div class="page-banner-area overlay section">
    <div class="container">
        <div class="row">
            <!-- Page Banner -->
            <div class="page-banner text-center col-xs-12">
                <h1>Our Classes</h1>
                <!-- Breadcrumb -->
                <ul class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li><a href="#">Our Classes</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End of Page Banner Area -->
   
<!-- Course Area Start -->
<div class="course-area bg-white section pt-120 pb-90">
    <div class="container">
        <!-- Course Wrapper -->
        <div class="course-wrapper row">
            @foreach (var clas in Model)
            {
                <!-- Course Item -->
                <div class="col-md-4 col-sm-6 col-xs-12 mb-30">
                    <div class="course-item">
                        <a class="image" href="course-details.html"><img src="~/Assets/img/course/1.jpg" alt=""></a>
                        <div class="content">
                            <h4 class="title"><a href="course-details.html">Mã lớp : @clas.ScheduleCode</a></h4>
                            <div class="course-info">
                                <!-- <a href="#">Faculty of ME</a> -->
                                <!-- <span><i class="zmdi zmdi-calendar-check"></i> 4 years</span> --> 
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Course Item -->
            }
            

        </div>
    </div>
</div>
<!-- End of Course Area -->