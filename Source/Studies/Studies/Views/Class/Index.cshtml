@{
    ViewBag.Title = "Class";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    List<CORE.Tables.TB_FILES> file = ViewBag.File;
}

@model List<CORE.Views.V_SCHEDULE_DETAILS>

<!-- Page Banner Area Start -->
<div class="page-banner-area overlay section">
    <div class="container">
        <div class="row">
            <!-- Page Banner -->
            <div class="page-banner text-center col-xs-12">
                <h1>Our Classes</h1>
                <!-- Breadcrumb -->
                <ul class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li><a href="#">Our Classes</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End of Page Banner Area -->
<!-- Course Area Start -->
<div class="course-area bg-white section pt-120 pb-90">
    <div class="container">
        <!-- Course Wrapper -->
        <div class="course-wrapper row">


            <!-- News Area Start -->
            <div class="news-area bg-white section pt-120 pb-90">
                <div class="container">
                    <div class="row">
                        @foreach (var clas in Model)
                        {
                            <!-- News Item -->
                            <div class="col-md-4 col-sm-6 col-xs-12 mb-30">
                                <div class="news-item">
                                    <a class="image" href="@Url.Action("Detail",new {scheduleId = clas.ScheduleId })">
                                        @if (string.IsNullOrEmpty(clas.ScheduleFileId))
                                        {
                                            <img src="~/Assets/img/course/1.jpg" alt="">
                                        }
                                        else
                                        {
                                            <img style="height:250px;" src="@file.Where(x=>x.FileId.ToString().Equals(clas.ScheduleFileId)).FirstOrDefault().FileUrl" />
                                        }
                                    
                                    </a>
                                    <div class="content">
                                        <h4 class="title"><a href="@Url.Action("Detail",new {scheduleId = clas.ScheduleId })">Mã lớp : @clas.ScheduleCode</a></h4>
                                        <div class="news-meta fix">
                                            <span><i class="zmdi zmdi-calendar-check"></i>Thời gian học : @clas.ScheduleDetailTimeFrom - @clas.ScheduleDetailTimeTo</span>
                                            <a href="#"><i class="zmdi zmdi-eye"></i>Số lượng học sinh trong lớp : 50</a>
                                            <a href="#"><i class="zmdi zmdi-comments"></i>19</a>
                                        </div>
                                        <p>
                                            @{
                                                var result = "";
                                                if (clas.ScheduleDetailNote.ToArray().Length > 40)
                                                {
                                                    result = clas.ScheduleDetailNote.Substring(0, 35) + "....";
                                                }
                                                else
                                                {
                                                    result = clas.ScheduleDetailNote;

                                                }
                                                @result
                                            }

                                        </p>
                                        <a href="@Url.Action("Detail",new {scheduleId = clas.ScheduleId })">Chi tiết</a>
                                    </div>
                                </div>
                            </div>
                                                }

                    </div>
                </div>
            </div>
            <!-- Course Item -->




        </div>
    </div>
</div>
<!-- End of Course Area -->