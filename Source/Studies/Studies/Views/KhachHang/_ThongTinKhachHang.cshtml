@model  AFD.Tables.SYS_USERS

<div class="panel panel-flat">
    <div class="panel-heading">
        <h6 class="panel-title">Thông tin học viên</h6>
        <div class="heading-elements">
            <ul class="icons-list">
                <li><a data-action="collapse"></a></li>
                <li><a data-action="reload"></a></li>
            </ul>
        </div>
    </div>
    <div class="panel-body">
        <form action="#">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label>User ID</label>
                        <input type="text" readonly value=@Model.USER_ID class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label>Full name</label>
                        <input type="text" readonly value=@Model.USER_FULLNAME disabled class="form-control">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-4">
                            <label>Email</label>
                            <input type="text" readonly class="form-control" value=@Model.USER_LOGIN_EM >
                        </div>
                        <div class="col-md-4">
                            <label>Người tạo</label>
                            <input type="text" readonly class="form-control" value=@Model.USER_CREATEBY >
                        </div>
                        <div class="col-md-4">
                            <label>Ngày tạo</label>
                            <input type="text" readonly class="form-control" value=@Model.USER_CREATETIME >
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="display-block">Upload profile image</label>
                        <input type="file" class="file-styled">
                        <span class="help-block">Accepted formats: gif, png, jpg. Max file size 2Mb</span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>