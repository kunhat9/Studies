@model List<AFD.Tables.SYS_BOXES>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h5 class="modal-title">Danh mục</h5>
        </div>
        <div class="modal-body">
            <!-- Voucher info -->
            <div class="panel panel-flat">
                <div class="panel-body">
                    <form action="#">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <input type="hidden" value="" class="form-control" id="TYPE_ID">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <label>Danh Mục</label>
                                    <input type="text" id="TYPE_NAME" value="" class="form-control not-empty">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Chi nhánh</label>
                                        <select class="select form-control select-search select2-hidden-accessible w-100" id="TYPE_BOX_ID" tabindex="-1" aria-hidden="true">
                                            @for (int i = 0; i < Model.Count; i++)
                                            {
                                                <option value='@Model[i].BOX_ID'>@Model[i].BOX_NAME</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <label>Mô tả</label>
                                    <textarea rows="8" class="form-control" id="TYPE_DESCRIPTION"></textarea>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /Voucher info -->
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary btnSave">Save changes</button>
        </div>
    </div>
</div>

<script>
    features.insertOrUpdate("/Ajax/AddOrUpdateExpenseType", null, getParamsForSearch);
</script>